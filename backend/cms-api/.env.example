# =============================================================================
# cms-api â€“ Environment template (copy to .env and set APP_ENV)
# Allowed APP_ENV: local | qa | production
# =============================================================================

# -----------------------------------------------------------------------------
# Application (set APP_ENV per deployment)
# -----------------------------------------------------------------------------
APP_NAME=cms-api
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:9332

# local:   APP_ENV=local   APP_DEBUG=true  APP_URL=http://localhost:9332
# qa:      APP_ENV=qa      (debug forced off) APP_URL=https://api-qa.example.com
# production: APP_ENV=production APP_URL=https://api.example.com

APP_TIMEZONE=Europe/London
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# CMS / Client (used by config/client.php and app code)
APP_VERSION=
SFY_CMS_ROOT_URL=http://localhost:9332
CLIENT_API_ROOT=
CLIENT_API_VERSION=v1
CLIENT_API_KEY=
CLIENT_API_PRIVATE_ALLOWED_HOSTS=192.168.65.1,localhost
CLIENT_REGISTRATION_EMAIL=
CLIENT_SITE_ROOT=
SITEMAP_LOCATION=sitemap.xml
ADMIN_ROOT_FOLDER_LOCATION=.
WEBSITE_PUBLIC_FOLDER_LOCATION=.
USER_AVATAR_ENTITY_NAME=user_avatar
# PayPal (optional)
PAYPAL_API_ROOT_V1=
PAYPAL_API_ROOT_V2=
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# Passport (set after running: make cms-api-passport-install)
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=
PASSPORT_PASSWORD_CLIENT_ID=
PASSPORT_PASSWORD_CLIENT_SECRET=

BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Logging (environments.php sets defaults per APP_ENV; override here if needed)
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_DAILY_DAYS=3
LOG_DEPRECATIONS_CHANNEL=null

# local:   LOG_LEVEL=debug  LOG_STACK=single  LOG_DAILY_DAYS=3
# qa:      LOG_LEVEL=info   LOG_STACK=daily   LOG_DAILY_DAYS=14
# production: LOG_LEVEL=warning LOG_STACK=daily LOG_DAILY_DAYS=30

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cms_api
DB_USERNAME=root
DB_PASSWORD=

# local (Docker): DB_HOST=mysql DB_PASSWORD=secret (set by compose)
# qa/production: use real DB_* values; never commit credentials

# -----------------------------------------------------------------------------
# Session & cache
# -----------------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
QUEUE_CONNECTION=database

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# -----------------------------------------------------------------------------
# Redis (optional; set when using redis for cache/queue/session)
# -----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Mail (local: log or Mailpit; qa/production: real SMTP or mail service)
# -----------------------------------------------------------------------------
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="cms-api@localhost"
MAIL_FROM_NAME="${APP_NAME}"

# local (Docker): MAIL_MAILER=smtp MAIL_HOST=mailpit MAIL_PORT=1025

# -----------------------------------------------------------------------------
# AWS (optional)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
