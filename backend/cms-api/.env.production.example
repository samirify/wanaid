# Copy to .env on production server (or set these in your production deployment)
# APP_ENV=production forces debug off and uses production log defaults (daily, warning, 30 days)

APP_ENV=production
APP_NAME=cms-api
APP_KEY=
APP_URL=https://api.yourdomain.com

LOG_LEVEL=warning
LOG_STACK=daily
LOG_DAILY_DAYS=30

DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

SESSION_DRIVER=database
CACHE_STORE=database
QUEUE_CONNECTION=database

MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"
